{
	"name":"Macros",
	"description":"define modifications to a page",
	"version":"0.1",
	"permissions":[
		"activeTab",
		"tabs",
		"webNavigation",
		"storage",
		"scripting"
	],
	"host_permissions": [
		"http://*/",
		"https://*/"
	],
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"all_frames": true,
			"js": ["content-script.js"],
			"run_at": "document_start"
		}
	],
	"sandbox": {
		"pages": [
			"create-rule.html",
			"management.html",
			"popup.html",
			"devtools_sidebar.html"
		]
	},
	"background":{
		"service_worker": "background.js"
	},
	"action":{
		"default_title":"Macros",
		"dafault_popup":"popup.html"
	},
	"devtools_page": "devtools.html",
	"manifest_version":3
}
